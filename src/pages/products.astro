---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";

import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const products: CollectionEntry<'products'>[] = await getCollection('products');
---

<Layout>
    <Header/>
    <NavBar/>
    <main class="container mx-auto p-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {products.map((product) => (
            <article class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow">
              <div class="relative aspect-square">
                <a href={`/products/${product.slug}`} class="block w-full h-full">
                <img 
                  src={product.data.image} 
                  alt={product.data.title}
                  class="object-cover w-full h-full"
                />
                {product.data.title}
                </a>
              </div>
    
              <div class="p-4 space-y-3">
                <div class="text-sm text-blue-600">
                  {product.data.marque}
                </div>
    
                <h2 class="text-gray-800 font-medium line-clamp-2">
                  {product.data.title}
                </h2>
    
                <div class="flex items-center gap-2">
                  <span class="text-xl font-bold">{product.data.price} Dhs</span>
                  {product.data.oldprice && (
                    <span class="text-sm text-gray-400 line-through">
                      {product.data.oldprice} Dhs
                    </span>
                  )}
                  {product.data.discount && (
                    <span class="text-sm text-orange-500">
                      -{product.data.discount}%
                    </span>
                  )}
                </div>
    
                {product.data.rating && (
                  <div class="flex items-center gap-1">
                    <div class="flex text-yellow-400">
                      {Array.from({ length: 5 }).map((_, i) => (
                        <span class={i < product.data.rating! ? "text-yellow-400" : "text-gray-200"}>
                          ★
                        </span>
                      ))}
                    </div>
                  </div>
                )}
    
                {product.data.stock && (
                  <div class="text-sm text-red-500">
                    {product.data.stock} articles seulement
                  </div>
                )}
    
                {product.data.shipping && (
                  <div class="text-sm text-gray-500">
                    + livraison {product.data.shipping}
                  </div>
                )}
    
                <button class="w-full bg-orange-400 hover:bg-orange-500 text-white py-2 px-4 rounded-lg text-sm">
                  J'achète
                </button>
              </div>
            </article>
          ))}
        </div>
      </main>
    <Footer/>
</Layout>